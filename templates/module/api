const api = makeApi('[UModule]')

require('app/modules/[LModule]/[LModule]Types')(api)
require('app/modules/[LModule]/[LModule]TC')(api)

const [UModule]Resolver = require('app/modules/invoice/resolvers/invoiceResolver')
const [LModule]Resolver = new [UModule]Resolver()


api.queryOf('[UModule].findMany', get[LModule]s)

api
  .mutation('create[UModule]', [LModule]Resolver.create[UModule])
  .args({
    name: 'String!',
  })

api
  .mutation('update[UModule]', [LModule]Resolver.update[UModule])
  .args({
    _id: 'MongoID!',
    name: 'String!'
  })
  .type('[UModule]')

api
  .mutation('delete[UModule]', [LModule]Resolver.delete[UModule])
  .args({ _id: 'MongoID!' })
  .type('[UModule]')
